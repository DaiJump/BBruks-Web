@{
    ViewData["Title"] = "Registro";
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BBruks</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Ingresá</a>
                    </li>
                </ul>


            </div>
        </div>
    </nav>
</header>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto">
                <div class="card flex-row mt-2 mb-5 border-0 shadow rounded-3 overflow-hidden">
                    <div class="card-body p-4 p-sm-5">
                        <h3 class="card-title text-center mb-5 fw-light fs-5">Registro</h3>
                        <form>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInputUsername" placeholder="Ingresá tu nombre" required autofocus>
                                <label class="pt-2" for="floatingInputUsername">Nombre</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInputUsername" placeholder="Ingresá tu apellido" required autofocus>
                                <label class="pt-2" for="floatingInputUsername">Apellido</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInputUsername" placeholder="Crea tu usuario" required autofocus>
                                <label class="pt-2" for="floatingInputUsername">Usuario</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="floatingInputEmail" placeholder="nombre@ejemplo.com">
                                <label class="pt-2" for="floatingInputEmail">Email</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" id="floatingPassword" placeholder="Crea tu contraseña">
                                <label class="pt-2" for="floatingPassword">Contraseña</label>
                            </div>
                            <div class="d-grid mb-2 text-center">
                                <button class="btn btn-lg btn-primary btn-login fw-bold text-uppercase mb-2 px-5" type="submit">Registrarme</button>
                            </div>
                            <hr>
                            <a class="d-block text-center mt-2" sp-controller="Home" asp-action="Login">¿Ya tenés una cuenta? ¡Ingresá!</a>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
