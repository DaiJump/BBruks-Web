                            <!-- Form Busqueda -->
                            <form>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="¿Qué libro estás buscando?">

                                </div>

                                <div class="text-center">
                                    <button class="btn btn-lg btn-primary btn-login text-uppercase fw-bold mb-2 px-5" asp-area="" asp-controller="Search" asp-action="Search" type="submit">Buscar</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
